{
    "extends": [
        "airbnb-base", 
        "prettier", 
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "plugins": ["prettier", "import"],
    "rules": {
        "indent": ["error", 2],
        "semi": ["error", "always"],
        "quotes": ["error", "single"]
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    }
}